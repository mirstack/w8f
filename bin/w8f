#!/bin/bash

VERSION="0.1.0"
FILE=
BASENAME=
DIRNAME=
TIMEOUT=10
INTERVAL=1
OUTPUT=/dev/stdout

usage()
{
    cat <<EOF
Usage:

  w8f [options] file

Options:

  -h, --help
      Display this help dialog.

  -i, --interval <interval>
      Number of seconds between which program will run checks.
      Default: 1.

  -t, --timeout <timeout>
      Maximum execution time. If 0, then no timeout.
      Default: 10.

  --version
      Print current version.

Check 'w8f(1)' for more information.
EOF
}

usage_notice()
{
    echo "Check '$0 --help' for usage information." >&2
}

init()
{
    OPTS="hi:t:v"
    OPTL="help,interval:,timeout:,version"
    TEMP=$(getopt -o $OPTS --long $OPTL -n "$0" -- "$@")

    if (( $? != 0 )); then
        usage_notice
        exit 0
    fi

    eval set -- "$TEMP"

    while true; do
        case "$1" in
            -h|--help)
                usage
                exit 0
                ;;
            -i|--interval)
                INTERVAL=$2
                shift 2
                ;;
            -t|--timeout)
                TIMEOUT=$2
                shift 2
                ;;
            --version)
                echo $VERSION
                exit 0
                ;;
            --)
                shift
                break
                ;;
        esac
    done

    case $# in
        1)
            FILE=$1
            BASENAME=$(basename $FILE)
            DIRNAME=$(dirname $FILE)
            ;;
        *)
            echo "$0: missing argument -- 'FILE'" >&2
            usage_notice
            exit 1
            ;;
    esac
}

main()
{
    slept=0

    while [ ! -e $FILE ]; do
        sleep $INTERVAL
        slept=$(( slept + INTERVAL ))

        if (( $TIMEOUT > 0 )) && (( $slept >= $TIMEOUT )); then
            echo "ERROR -- timed out!" >&2
            exit 1
        fi
    done

    exit 0
}

init "$@" && main
